Description: Debian defaults
Author: Jonas Genannt <jonas.genannt@capi2name.de>
Upstream: no

diff --git a/graylog2.conf.example b/graylog2.conf.example
index 9b474b0..ebd79e6 100644
--- a/graylog2.conf.example
+++ b/graylog2.conf.example
@@ -4,7 +4,7 @@ is_master = true
 
 # The auto-generated node ID will be stored in this file and read after restarts. It is a good idea
 # to use an absolute file path here if you are starting graylog2-server from init scripts or similar.
-node_id_file = /etc/graylog2-server-node-id
+node_id_file = /etc/graylog2/server-node-id
 
 # You MUST set a secret to secure/pepper the stored user passwords here. Use at least 64 characters.
 # Generate one by using for example: pwgen -s 96
@@ -17,7 +17,7 @@ password_secret =
 root_password_sha2 =
 
 # Set plugin directory here (relative or absolute)
-plugin_dir = plugin
+plugin_dir = /opt/graylog2/server/plugin
 
 # REST API listen URI. Must be reachable by other graylog2-server nodes if you run a cluster.
 rest_listen_uri = http://127.0.0.1:12900/
@@ -41,7 +41,7 @@ elasticsearch_index_prefix = graylog2
 elasticsearch_max_number_of_indices = 20
 
 # How many ElasticSearch shards and replicas should be used per index? Note that this only applies to newly created indices.
-elasticsearch_shards = 4
+elasticsearch_shards = 1
 elasticsearch_replicas = 0
 
 
@@ -103,7 +103,7 @@ processor_wait_strategy = blocking
 ring_size = 1024
 
 # MongoDB Configuration
-mongodb_useauth = true
+mongodb_useauth = false
 mongodb_user = grayloguser
 mongodb_password = 123
 mongodb_host = 127.0.0.1
